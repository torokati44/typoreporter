{
    "manifest_version": 2,
    "name": "Typo Reporter",
    "version": "1.0",
    "description": "Report typos or factual errors in articles",
    "permissions": ["contextMenus", "activeTab"],
    "options_ui": {
        "page": "settings.html"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": ["*://*.telex.hu/*"],
            "js": ["content.js"]
        }
    ]
}
